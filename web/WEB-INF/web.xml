<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- user authentication -->
    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>servlet.user.auth.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>servlet.user.auth.Register</servlet-class>
    </servlet>
    <!-- app -->
    <servlet>
        <servlet-name>Application</servlet-name>
        <servlet-class>servlet.user.Application</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Support</servlet-name>
        <servlet-class>servlet.user.Support</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Categories</servlet-name>
        <servlet-class>servlet.user.category.Categories</servlet-class>
    </servlet>
    <!-- admin authentication -->
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.admin.auth.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>servlet.admin.auth.Logout</servlet-class>
    </servlet>
    <!-- products -->
    <servlet>
        <servlet-name>ListProducts</servlet-name>
        <servlet-class>servlet.admin.product.ListProducts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProduct</servlet-name>
        <servlet-class>servlet.admin.product.EditProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddProduct</servlet-name>
        <servlet-class>servlet.admin.product.AddProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchProduct</servlet-name>
        <servlet-class>servlet.admin.product.SearchProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteProduct</servlet-name>
        <servlet-class>servlet.admin.product.DeleteProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetProductInformation</servlet-name>
        <servlet-class>servlet.api.GetProductInformation</servlet-class>
    </servlet>
    <!-- supplier -->
    <servlet>
        <servlet-name>AddSupplier</servlet-name>
        <servlet-class>servlet.admin.supplier.AddSupplier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListSuppliers</servlet-name>
        <servlet-class>servlet.admin.supplier.ListSuppliers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditSupplier</servlet-name>
        <servlet-class>servlet.admin.supplier.EditSupplier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchSupplier</servlet-name>
        <servlet-class>servlet.admin.supplier.SearchSupplier</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteSupplier</servlet-name>
        <servlet-class>servlet.admin.supplier.DeleteSupplier</servlet-class>
    </servlet>
    <!-- user -->
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>servlet.admin.user.AddUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditUser</servlet-name>
        <servlet-class>servlet.admin.user.EditUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUsers</servlet-name>
        <servlet-class>servlet.admin.user.ListUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteUser</servlet-name>
        <servlet-class>servlet.admin.user.DeleteUser</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchUser</servlet-name>
        <servlet-class>servlet.admin.user.SearchUser</servlet-class>
    </servlet>
    <!-- tickets -->
    <servlet>
        <servlet-name>AddTicket</servlet-name>
        <servlet-class>servlet.admin.ticket.AddTicket</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditTicket</servlet-name>
        <servlet-class>servlet.admin.ticket.EditTicket</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListTickets</servlet-name>
        <servlet-class>servlet.admin.ticket.ListTickets</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteTicket</servlet-name>
        <servlet-class>servlet.admin.ticket.DeleteTicket</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewTicket</servlet-name>
        <servlet-class>servlet.admin.ticket.ViewTicket</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTicketComment</servlet-name>
        <servlet-class>servlet.admin.ticket.AddTicketComment</servlet-class>
    </servlet>
    <!-- routes -->
    <!-- app authentication -->
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <!-- app -->
    <servlet-mapping>
        <servlet-name>Application</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Support</servlet-name>
        <url-pattern>/app/support</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Categories</servlet-name>
        <url-pattern>/app/categories</url-pattern>
    </servlet-mapping>
    <!-- admin authentication -->
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    <!-- users -->
    <servlet-mapping>
        <servlet-name>ListUsers</servlet-name>
        <url-pattern>/admin/users</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteUser</servlet-name>
        <url-pattern>/admin/users/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/admin/users/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditUser</servlet-name>
        <url-pattern>/admin/users/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchUser</servlet-name>
        <url-pattern>/admin/users/search</url-pattern>
    </servlet-mapping>
    <!-- products -->
    <servlet-mapping>
        <servlet-name>ListProducts</servlet-name>
        <url-pattern>/admin/products</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProduct</servlet-name>
        <url-pattern>/admin/products/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddProduct</servlet-name>
        <url-pattern>/admin/products/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteProduct</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchProduct</servlet-name>
        <url-pattern>/admin/products/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetProductInformation</servlet-name>
        <url-pattern>/api/GetProductInformation</url-pattern>
    </servlet-mapping>
    <!-- suppliers -->
    <servlet-mapping>
        <servlet-name>ListSuppliers</servlet-name>
        <url-pattern>/admin/suppliers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditSupplier</servlet-name>
        <url-pattern>/admin/suppliers/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddSupplier</servlet-name>
        <url-pattern>/admin/suppliers/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteSupplier</servlet-name>
        <url-pattern>/admin/suppliers/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchSupplier</servlet-name>
        <url-pattern>/admin/suppliers/search</url-pattern>
    </servlet-mapping>
    <!-- tickets -->
    <servlet-mapping>
        <servlet-name>ListTickets</servlet-name>
        <url-pattern>/admin/tickets</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditTicket</servlet-name>
        <url-pattern>/admin/tickets/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTicket</servlet-name>
        <url-pattern>/admin/tickets/add</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTicketComment</servlet-name>
        <url-pattern>/admin/tickets/add/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteTicket</servlet-name>
        <url-pattern>/admin/tickets/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewTicket</servlet-name>
        <url-pattern>/admin/tickets/view</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
